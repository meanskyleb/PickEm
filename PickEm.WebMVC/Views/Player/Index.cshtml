@model IEnumerable<PickEm.Models.PlayerListItem>

@{
    ViewBag.Title = "Index";
}

<h2 class="players">Players</h2>
@section Styles
{
    <style type="text/css">
        table {
            border: 5px solid #05045e;
        }
    </style>
}
    <style>
        body {
            background-color: #808080;
        }
    </style>
    <p><a class="btn btn-light" value="Add Player" onclick=location.href =@Html.ActionLink("Create New", "Create","Player")</a></p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlayerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedUtc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlayerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedUtc)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PlayerId }, htmlAttributes: new { @class = "btn btn-dark" }) |
                @Html.ActionLink("Details", "Details", new { id = item.PlayerId }, htmlAttributes: new { @class = "btn btn-dark" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PlayerId }, htmlAttributes: new { @class = "btn btn-dark" })
            </td>
        </tr>
    }

</table>
